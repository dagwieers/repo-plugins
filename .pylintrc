[MESSAGES CONTROL]
disable=
    bad-option-value,
    bare-except,  # TODO
    duplicate-code,  # Integration tests tend to test similar things
    fixme,  # Allow FIXMEs in code is a useful practice
    import-outside-toplevel,  # Done on purpose to reduce overhead at startup
    invalid-name,  # TODO
    logging-not-lazy,  # TODO
    missing-docstring,  # TODO
    no-init,  # TODO
    no-self-use,  # TODO
    old-style-class,
    redefined-builtin,  # TODO
    too-few-public-methods,
    too-many-arguments,
    too-many-branches,
    too-many-function-args,
    too-many-instance-attributes,
    too-many-lines,
    too-many-locals,
    too-many-public-methods,
    too-many-return-statements,
    too-many-statements,
    useless-super-delegation,
max-line-length=160
